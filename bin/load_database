#!/usr/bin/env bash

source $(dirname $0)/_basics

if (( $# != 1 )); then
    echo "Usage: load_database DUMP.sql.gz"
    exit 1
fi

dump=$1

if [ ! -f $dump ]; then
    echo "'$dump' is not a file"
    exit 2
fi

zcat $dump | docker-compose exec -T db bash -c '
    mysql -uroot -p$MYSQL_ROOT_PASSWORD -D $MYSQL_DATABASE
'

echo "Done."
