#!/bin/bash

function hit_rails {
    SCRIPT_DIR="$(dirname "$(realpath "${BASH_SOURCE[0]:-${(%):-%x}}")")"
    case "$1" in
        console)
            bash "$SCRIPT_DIR/console"
            ;;
        bash)
            bash "$SCRIPT_DIR/bash"
            ;;
        routes)
            bash "$SCRIPT_DIR/routes"
            ;;
        *)
            echo "Usage: hit rails {console, bash}"
            return 1
            ;;
    esac
}
