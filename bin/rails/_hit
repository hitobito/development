#!/bin/bash

function hit_rails {
    case "$1" in
        console)
            SCRIPT_DIR="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"
            bash "$SCRIPT_DIR/console"
            ;;
        bash)
            SCRIPT_DIR="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"
            bash "$SCRIPT_DIR/bash"
            ;;
        routes)
            SCRIPT_DIR="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"
            bash "$SCRIPT_DIR/routes"
            ;;
        *)
            echo "Usage: hit rails {console, bash}"
            return 1
            ;;
    esac
}

export -f hit_rails
