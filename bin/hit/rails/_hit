#!/bin/bash

hit_rails() {
  case "$1" in
    a | attach)
      bash "$HIT_SCRIPT_DIR/rails/attach"
      ;;
    c | console)
      bash "$HIT_SCRIPT_DIR/rails/console"
      ;;
    b | bash)
      bash "$HIT_SCRIPT_DIR/rails/bash"
      ;;
    r | routes)
      bash "$HIT_SCRIPT_DIR/rails/routes"
      ;;
    l | logs)
      bash "$HIT_SCRIPT_DIR/rails/logs"
      ;;
    *)
      echo "Usage: hit rails {a|attach, c|console, b|bash, r|routes, l|logs}"
      return 1
      ;;
  esac
}
