#!/bin/bash

function hit_db {
    SCRIPT_DIR="$(dirname "$(realpath "${BASH_SOURCE[0]:-${(%):-%x}}")")"
    case "$1" in
        console)
            echo "Connecting to database console..."
            bash "$SCRIPT_DIR/console"
            ;;
        *)
            echo "Usage: hit db {console}"
            return 1
            ;;
    esac
}
