#!/bin/bash

function hit_db {
    case "$1" in
        console)
            echo "Connecting to database console..."
            SCRIPT_DIR="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"
            bash "$SCRIPT_DIR/console"
            ;;
        *)
            echo "Usage: hit db {console}"
            return 1
            ;;
    esac
}

export -f hit_db
