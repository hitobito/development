#!/usr/bin/env bash

source $(dirname $0)/../_basics

# prepare bundle & co
docker compose run --rm \
  --workdir=/usr/src/app/hitobito \
  -e RAILS_ENV=test \
  -e RAILS_TEST_DB_NAME=hitobito_test_core \
  -e SKIP_INIT=1 \
  rails_test \
  bash -c "bundle install && bundle exec ./bin/webpack-test-compile"
